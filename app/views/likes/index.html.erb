<div class="page-header">
  <h1>
    <%= current_user.username %>'s Likes
    <a href="/likes/new" class="btn btn-lg btn-success">New Like</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Liked Photos:</th>
        <th>Actions</th>
      </tr>

      <% @likes.each do |like| %>
      <tr>
        <% if like.user_id == current_user.id %>
        <td style="font-size: 20px;">
          <img src="<%= Photo.find(like.photo_id).image %>" height="100">
          <em> <%= Photo.find(like.photo_id).caption %> </em>
        </td>
        <td>
          <a href="/likes/<%= like.id %>" class="btn btn-primary">Show</a>
          <a href="/likes/<%= like.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_like/<%= like.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
        <% end %>
      </tr>
      <% end %>
    </table>
  </div>
</div>
